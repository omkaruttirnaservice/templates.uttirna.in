<div style="font-family: Arial, Helvetica, sans-serif; background-color: #f4f6fa; padding: 20px; color: #333;">
  <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="max-width:640px; margin: 0 auto; background:#ffffff; border-radius:10px; overflow:hidden; box-shadow:0 4px 18px rgba(46,60,90,0.08);">
    
    <tr>
      <td style="padding:20px 24px; background: linear-gradient(90deg, #4E6688 0%, #6B8AC6 100%); color:#fff; text-align:center;">
        <h1 style="margin:0; font-size:20px; font-weight:700;">YDCC - Summary</h1>
        <p style="margin:6px 0 0 0; font-size:13px; opacity:0.95;">Quick overview of registrations & applications</p>
      </td>
    </tr>

    <tr>
      <td style="padding:18px 22px; text-align:center;">
        <p style="font-size:13px; color:#667085; margin:0 0 18px 0;">
          <strong style="color:#0F172A;">Date:</strong> <%= details.date %> &nbsp;•&nbsp;
          <strong style="color:#0F172A;">Time:</strong> <%= details.time %>
        </p>

        <!-- KPI GRID -->
        <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="border-collapse:collapse;">

          <tr>
            <td width="50%" style="padding:8px;">
              <table cellpadding="16" width="100%" style="background:#f8fafc; border-radius:10px; text-align:center; height:120px;">
                <tr><td>
                  <div style="font-size:13px; color:#94a3b8;">Total Registrations</div>
                  <div style="font-size:28px; font-weight:700; color:#0f172a;"><%= details.total_registrations %></div>
                </td></tr>
              </table>
            </td>

            <td width="50%" style="padding:8px;">
              <table cellpadding="16" width="100%" style="background:#f8fafc; border-radius:10px; text-align:center; height:120px;">
                <tr><td>
                  <div style="font-size:13px; color:#94a3b8;">Total Applications</div>
                  <div style="font-size:28px; font-weight:700; color:#0f172a;"><%= details.application_count %></div>
                </td></tr>
              </table>
            </td>
          </tr>

          <tr>
            <td width="50%" style="padding:8px;">
              <table cellpadding="16" width="100%" style="background:#f8fafc; border-radius:10px; text-align:center; height:120px;">
                <tr><td>
                  <div style="font-size:13px; color:#94a3b8;">Preview Done</div>
                  <div style="font-size:28px; font-weight:700; color:#0f172a;"><%= details.preview_done_count %></div>
                </td></tr>
              </table>
            </td>

            <td width="50%" style="padding:8px;">
              <table cellpadding="16" width="100%" style="background:#f8fafc; border-radius:10px; text-align:center; height:120px;">
                <tr><td>
                  <div style="font-size:13px; color:#94a3b8;">Total Payment</div>
                  <div style="font-size:28px; font-weight:700; color:#0f172a;"><%= details.payment_done_count %></div>
                </td></tr>
              </table>
            </td>
          </tr>

        </table>

      </td>
    </tr>

    <tr>
      <td style="padding:12px 18px; background:#f8fafc; text-align:center; font-size:12px; color:#94a3b8;">
        <%= config.site_name %> • 
        <a href="<%= config.site_url %>" style="color:#6b8ac6; text-decoration:none;"><%= config.site_url %></a>
      </td>
    </tr>

  </table>
</div>
